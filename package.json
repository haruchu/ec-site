    "eslint-config-prettier": "^8.5.0",
    "firebase": "^9.9.3",
    "firebase-admin": "^11.0.1",
    "jest": "^29.0.3",
    "next": "12.2.5",
    "prettier": "^2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-dropzone": "^14.2.2",
    "react-feather": "^2.0.10",
